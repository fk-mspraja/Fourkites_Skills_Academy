# Ocean Debugging Agent Configuration
# Copy this file to .env and fill in your credentials

# ===========================================
# SALESFORCE
# ===========================================
SF_INSTANCE_URL=https://fourkites.my.salesforce.com
SF_USERNAME=your-email@fourkites.com
SF_PASSWORD=your-password
SF_SECURITY_TOKEN=your-security-token

# ===========================================
# REDSHIFT (Data Warehouse)
# ===========================================
REDSHIFT_HOST=redshift-cluster.xxxxx.region.redshift.amazonaws.com
REDSHIFT_PORT=5439
REDSHIFT_DATABASE=dwh
REDSHIFT_USER=your-user
REDSHIFT_PASSWORD=your-password

# ===========================================
# CLICKHOUSE (SigNoz Logs)
# ===========================================
SIGNOZ_CLICKHOUSE_HOST=signoz-clickhouse.internal
SIGNOZ_CLICKHOUSE_PORT=9000
SIGNOZ_DATABASE=signoz_logs
SIGNOZ_USER=default
SIGNOZ_PASSWORD=your-password

# ===========================================
# JUST TRANSFORM (RPA/Scraping)
# ===========================================
JT_API_URL=https://jt-api.internal
JT_USERNAME=shared-user
JT_PASSWORD=shared-password

# ===========================================
# FOURKITES TRACKING API
# ===========================================
TRACKING_API_URL=https://tracking.fourkites.internal
TRACKING_API_KEY=your-api-key

# ===========================================
# FOURKITES SUPER API (Internal)
# ===========================================
SUPER_API_URL=https://api.fourkites.internal/super
SUPER_API_KEY=your-super-api-key

# ===========================================
# ANTHROPIC LLM
# ===========================================
ANTHROPIC_API_KEY=your-anthropic-key
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4096

# ===========================================
# AGENT SETTINGS
# ===========================================
MAX_PARALLEL_TASKS=5
DEFAULT_TIMEOUT=60.0
MAX_RETRIES=3
RETRY_DELAY=1.0

# Investigation Settings
MAX_ITERATIONS=10
CONFIDENCE_THRESHOLD=0.7
LOG_LOOKBACK_DAYS=30
